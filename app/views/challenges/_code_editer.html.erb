<%= form_with url: challenge_run_tests_path(challenge) do |f| %>
  <div class="flex flex-col gap-4">
    <%= f.label :code %>
    <%= f.text_area :code, class: "w-full min-h-[500px]", style: "resize:none;", value: @user_challenge&.code %>
  </div>
  <br/>
  <%= f.submit "Run Tests", class: "px-3 py-2 rounded-lg bg-blue-500 text-blue-100 cursor-pointer" %>
<% end %>